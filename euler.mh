MODULE euler

(* Classic approach *)
: euler1-a ( )
  0
  1000 iota  ;; 1 to 1000
  { (r) 
    (r) 3 mod 0?
     ~  5 mod 0? or { + | drop } }
  print cr ;

(* Functional approach *)
: euler1-b ( )
  1000 iota
  ( ( 3 mod 0? )
    ( 5 mod 0? ) ) || 
    or not 
  ) filter
  ( + ) reduce
  print cr

(* Array Processing *)
: euler1-c ( )
  1000 iota 
  (r) 3 mod not ~
  (r) 5 mod not or
  index
  ( + ) reduce
  print cr

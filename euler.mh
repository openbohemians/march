MODULE euler

(* Classic approach *)
: euler1-a ( )
  0 1000 { (r) 
    (r) 3 mod not
     ~  5 mod not or 
    { + | drop } }
  print cr ;

(* Functional approach *)
: euler1-b ( )
  1000 iota
  ( ( 3 mod not )
    ( 5 mod not ) ) || or
  ) filter
  ( + ) reduce
  print cr

(* Array Processing *)
: euler1-c ( )
  1000 iota (r)
  (r) 3 mod not
   ~  5 mod not or
  index
  ( + ) reduce
  print cr

: euler1-c ( )
  1000 iota
  <
  " 3 mod not
  " 5 mod not or
  > index
  #' +
  print cr
